@model List<Calorie>;

@{
    ViewData["Title"] = "Calorie Home Page";
}

<div class="text-center">
    <h2> Calorie Counter</h2>
</div>

<hr />
<br />

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Food Name</th>
                <th>Calories</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Calorie c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Calories</td>
                    <td>
                        <a asp-route-id="@c.Id" asp-action="Edit" class="btn btn-info">Edit</a>
                        <a asp-route-id="@c.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td> 
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Add" class="btn btn-primary">Add Food</a>
<a asp-action="Calculate" class="btn btn-primary">Calculate Calories</a>
