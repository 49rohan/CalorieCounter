@model Calorie;

@{
    ViewData["Title"] = "Food Form";
}
<div class="text-center">
    <h2> Food Form </h2>
</div>
<hr />
<form asp-action="Edit" class="form-horizontal" method="post">
    <div class="form-group">
        <strong>
        <label asp-for="Name">Name: </label> <input type="text" class="form-control" asp-for="Name" />
        </strong>
    </div>
    <div class="form-group">
        <strong>
        <label asp-for="Calories">Calories: </label> <input type="text" class="form-control" asp-for="Calories" />
        </strong>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
